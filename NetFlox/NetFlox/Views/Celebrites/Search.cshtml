@model IEnumerable<NetFlox.DAL.Celebrite>
@{
    ViewData["Title"] = "Search";
}

<h2>Search</h2>

<h3>Il y a <b>@Model.Count()</b> pour la recherche "@ViewBag.search" :</h3>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="@item.UrlPhoto" height="50" />
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Nom)</a>
            </td>
        </tr>
        }
    </tbody>
</table> 